<!DOCTYPE html>
<html>
  <head>
    <title>Plaudern</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-toggleable-md navbar-light bg-inverse">
      <div class="container">
        <%= link_to "Plaudern", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>
        </ul>
      </div>
    </nav>
    <!-- flash messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert, alert-info #{name}") %>
    <% end %>
    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2018 Helene Martin</p>
        </center>
      </div>
    </footer>

  </body>
</html>
